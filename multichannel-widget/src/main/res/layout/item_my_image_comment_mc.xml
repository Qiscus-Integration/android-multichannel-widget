<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFirstIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="10dp"
            android:text="You've reached first page"
            android:textColor="@color/qiscus_system_event"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dateOfMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_date"
            android:gravity="center"
            android:padding="10dp"
            android:text="Date"
            android:textColor="@color/qiscus_left_bubble_text_mc"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="bottom|end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="end"
                android:maxLines="1"
                android:textColor="@color/qiscus_date_bubble_mc"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/state"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_weight="2"
            android:background="@drawable/qiscus_rounded_right_buble_bg">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/layout_img_cover"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/qiscus_rounded_tr"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/pb_download"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/qiscus_circular_progress"
                    android:secondaryProgress="100"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/btn_download"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/bg_img_download"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_progress"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textColor="@color/qiscus_black_mc"
                        tools:text="20%" />

                    <ImageView
                        android:id="@+id/iv_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_download_img"
                        android:tint="@color/colorPrimary"
                        android:tintMode="src_atop"
                        android:visibility="visible"
                        tools:ignore="ContentDescription,UnusedAttribute" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="142dp"
                android:autoLink="all"
                android:background="@drawable/bg_my_caption_image"
                android:linksClickable="true"
                android:padding="8dp"
                android:textColor="@color/qiscus_right_bubble_text_mc"
                android:textColorLink="@color/qiscus_color_my_link_mc"
                android:textSize="14sp"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
